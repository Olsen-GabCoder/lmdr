<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Couche 1 : Le fond -->
    <!-- Nous utilisons la deuxième couleur de notre palette, le rouge. -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/menu_icon_bg_red"/>
            <corners android:radius="12dp"/>
        </shape>
    </item>

    <!-- Couche 2 : L'icône -->
    <!-- Nous superposons l'icône de livre que vous venez de me fournir. -->
    <item
        android:drawable="@drawable/ic_menu_recommend_book"
        android:gravity="center" />

</layer-list>