<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Couche 1 : Le fond -->
    <!-- On utilise la couleur violette pour ce bouton, conformément à notre palette. -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/menu_icon_bg_purple"/>
            <corners android:radius="12dp"/>
        </shape>
    </item>

    <!-- Couche 2 : L'icône -->
    <!-- On superpose l'icône de défis blanche et corrigée. -->
    <item
        android:drawable="@drawable/ic_menu_challenges"
        android:gravity="center" />

</layer-list>