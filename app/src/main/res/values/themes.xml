<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Base.Theme.LesMangeursDuRouleau" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/primary_accent</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSurface">@color/card_background</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <item name="colorSurfaceVariant">@color/profile_background</item>
        <item name="colorOnSurfaceVariant">@color/text_secondary</item>
        <item name="android:colorBackground">@color/profile_background</item>
        <item name="colorOnBackground">@color/text_primary</item>
        <item name="colorOutline">@color/icon_tint</item>
        <item name="textInputStyle">@style/Widget.Material3.TextInputLayout.OutlinedBox</item>
        <item name="android:textColorHint">@color/text_secondary</item>
        <item name="editTextColor">@color/text_primary</item>
        <item name="colorError">@color/error_color</item>
        <item name="colorOnError">@color/white</item>
    </style>

    <style name="Theme.LesMangeursDuRouleau.Cropper" parent="Theme.LesMangeursDuRouleau">
        <item name="colorPrimary">@color/ucrop_color_toolbar</item>
        <item name="colorPrimaryDark">@color/ucrop_color_statusbar</item>
        <item name="colorAccent">@color/ucrop_color_widget_active</item>
    </style>
    <style name="Theme.LesMangeursDuRouleau" parent="Base.Theme.LesMangeursDuRouleau" />

    <style name="ChatBubbleSent">
        <item name="android:background">@drawable/bg_chat_bubble_sent_dark</item>
        <item name="android:padding">@dimen/chat_message_padding</item>
    </style>

    <style name="RoundedImageStyle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

    <style name="ChatBubbleReceived">
        <item name="android:background">@drawable/bg_chat_bubble_received_dark</item>
        <item name="android:padding">@dimen/chat_message_padding</item>
    </style>

    <style name="ChatTextSent">
        <item name="android:textColor">@color/chat_text_sent_dark</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ChatTextReceived">
        <item name="android:textColor">@color/chat_text_received_dark</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ChatTimestamp">
        <item name="android:textColor">@color/chat_timestamp_dark</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize50Percent" parent="">
        <item name="cornerSize">50%</item>
    </style>

    <!-- NOUVEAU STYLE : Pour les ShapeableImageViews rondes -->
    <style name="ShapeAppearance.App.CircleImageView" parent="ShapeAppearanceOverlay.App.CornerSize50Percent" />

    <style name="Widget.App.EmojiReaction" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">28sp</item>
        <item name="android:padding">8dp</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="Widget.App.MessageAction" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:minWidth">150dp</item>
        <item name="android:textAppearance">?attr/textAppearanceBodyLarge</item>
    </style>
    <style name="ShapeAppearance.App.ChatImage" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

</resources>