<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="?attr/colorSurface"
    android:clickable="true"
    android:focusable="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <!-- Photo de profil -->
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/iv_member_picture"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:contentDescription="@string/profile_picture_description"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize50Percent"
            tools:src="@drawable/ic_profile_placeholder" />

        <!-- Nom tronqué si trop long -->
        <TextView
            android:id="@+id/tv_member_username"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:maxLines="1"
            android:textAppearance="?attr/textAppearanceTitleMedium"
            android:textColor="?attr/colorOnSurface"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/iv_member_picture"
            app:layout_constraintEnd_toStartOf="@id/iv_online_indicator"
            app:layout_constraintTop_toTopOf="@id/iv_member_picture"
            tools:text="AESGT Monastir Campus Universitaire Très Très Long Nom" />

        <!-- Indicateur en ligne -->
        <ImageView
            android:id="@+id/iv_online_indicator"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_marginStart="8dp"
            android:src="@drawable/shape_circle_green"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="@id/tv_member_username"
            app:layout_constraintBottom_toBottomOf="@id/tv_member_username"
            app:layout_constraintStart_toEndOf="@id/tv_member_username"
            app:layout_constraintEnd_toStartOf="@id/tv_online_status"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/tv_online_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="@string/status_online"
            android:textAppearance="?attr/textAppearanceBodySmall"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="@id/iv_online_indicator"
            app:layout_constraintBottom_toBottomOf="@id/iv_online_indicator"
            app:layout_constraintStart_toEndOf="@id/iv_online_indicator"
            app:layout_constraintEnd_toStartOf="@id/btn_follow"
            tools:visibility="visible" />

        <!-- Ville -->
        <TextView
            android:id="@+id/tv_member_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceBodyMedium"
            android:textColor="?attr/colorOnSurfaceVariant"
            app:layout_constraintStart_toStartOf="@id/tv_member_username"
            app:layout_constraintTop_toBottomOf="@id/tv_member_username"
            tools:text="Paris" />

        <!-- Icône livres -->
        <ImageView
            android:id="@+id/iv_book_icon"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginTop="4dp"
            android:contentDescription="@null"
            android:src="@drawable/ic_book"
            app:layout_constraintStart_toStartOf="@id/tv_member_city"
            app:layout_constraintTop_toBottomOf="@id/tv_member_city" />

        <!-- Compteur de livres lus -->
        <TextView
            android:id="@+id/tv_books_read_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:textAppearance="?attr/textAppearanceBodyMedium"
            android:textColor="?attr/colorOnSurfaceVariant"
            app:layout_constraintStart_toEndOf="@id/iv_book_icon"
            app:layout_constraintTop_toTopOf="@id/iv_book_icon"
            app:layout_constraintBottom_toBottomOf="@id/iv_book_icon"
            tools:text="15 Livres lus" />

        <!-- Bouton Suivre -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_follow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="100dp"
            app:cornerRadius="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="Suivre" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
