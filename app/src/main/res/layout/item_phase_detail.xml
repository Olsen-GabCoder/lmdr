<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingStart="20dp"
    android:paddingTop="12dp"
    android:paddingEnd="20dp"
    android:paddingBottom="12dp">

    <ImageView
        android:id="@+id/iv_phase_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:contentDescription="@string/phase_icon_description"
        app:tint="?attr/colorOnSurfaceVariant"
        tools:src="@drawable/ic_analysis" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_phase_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceBodyLarge"
            android:textStyle="bold"
            tools:text="Analyse de l'oeuvre" />

        <TextView
            android:id="@+id/tv_phase_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceBodyMedium"
            android:textColor="?attr/colorOnSurfaceVariant"
            tools:text="15 juin 2025" />
    </LinearLayout>

    <com.google.android.material.chip.Chip
        android:id="@+id/chip_phase_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="false"
        tools:chipBackgroundColor="@color/chip_bg_in_progress"
        tools:text="En cours"
        tools:textColor="@color/chip_text_in_progress" />
</LinearLayout>