<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:paddingHorizontal="16dp"
    android:paddingVertical="12dp">

    <!-- === DÉBUT DE LA MODIFICATION === -->
    <!-- Colonne 1: Conteneur pour l'avatar et l'icône de sélection -->
    <FrameLayout
        android:id="@+id/avatar_container"
        android:layout_width="56dp"
        android:layout_height="56dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/iv_participant_photo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Full"
            tools:src="@tools:sample/avatars" />

        <ImageView
            android:id="@+id/selection_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="bottom|end"
            android:background="@drawable/bg_unread_badge"
            android:padding="4dp"
            android:src="@drawable/ic_check_single"
            android:visibility="gone"
            app:tint="@color/white"
            tools:visibility="visible" />
    </FrameLayout>
    <!-- === FIN DE LA MODIFICATION === -->

    <!-- Colonne 3 (partie haute): Heure -->
    <TextView
        android:id="@+id/tv_last_message_timestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?attr/textAppearanceBodySmall"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Hier" />

    <!-- Colonne 2 (partie haute): Nom du participant -->
    <TextView
        android:id="@+id/tv_participant_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textAppearance="?attr/textAppearanceTitleMedium"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@id/tv_last_message_timestamp"
        app:layout_constraintStart_toEndOf="@id/avatar_container"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Olsen Kampala (vous)" />

    <!-- Colonne 3 (partie basse): Conteneur pour badge et punaise -->
    <LinearLayout
        android:id="@+id/status_container_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_last_message_timestamp">

        <ImageView
            android:id="@+id/iv_pinned_indicator"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginBottom="4dp"
            android:src="@drawable/ic_pin"
            android:visibility="gone"
            app:tint="?attr/colorOnSurfaceVariant"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/tv_unread_count"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/bg_unread_badge"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textStyle="bold"
            android:visibility="gone"
            tools:text="1"
            tools:visibility="visible" />
    </LinearLayout>


    <!-- Colonne 2 (partie basse): Conteneur pour statut et aperçu -->
    <LinearLayout
        android:id="@+id/message_preview_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/status_container_right"
        app:layout_constraintStart_toEndOf="@id/avatar_container"
        app:layout_constraintTop_toBottomOf="@id/tv_participant_name">

        <ImageView
            android:id="@+id/iv_read_status"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginEnd="4dp"
            android:visibility="gone"
            app:srcCompat="@drawable/ic_check_double"
            app:tint="?attr/colorPrimary"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/tv_last_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textAppearance="?attr/textAppearanceBodyMedium"
            android:textColor="?attr/colorOnSurfaceVariant"
            tools:text="Le Gabon a nationalisé le se..." />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>